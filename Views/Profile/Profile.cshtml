@model Bank_SaDi.Models.User
@{
    ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />
</head>
<body>
    <main>
        <div class="PersonalData">
            <h2>
                <span class="personal">Personal</span>
                <span class="data">Data</span>
            </h2>
            <div class="container_Table">
                <table class="personal-data-table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Data</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>First Name</th>
                            <td>@Model.FirstName</td>
                            <td class="Action"><button class="update-btn">Update</button></td>
                        </tr>
                        <tr>
                            <th>Last Name</th>
                            <td>@Model.LastName</td>
                            <td class="Action"><button class="update-btn">Update</button></td>
                        </tr>
                        <tr>
                            <th>National Id</th>
                            <td>@Model.NationalId</td>
                            <td class="Action"><button class="update-btn">Update</button></td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.Email</td>
                            <td class="Action"><button class="update-btn">Update</button></td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>*************</td>
                            <td class="Action"><button class="update-btn">Update</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="Section2">
            <img src="~/img/img1_personaldata.png" />
        </div>
    </main>

    <div id="updateModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Update Data</h3>
            </div>
            <form asp-action="UpdateData" method="post" class="form">
                <input type="hidden" id="fieldToUpdate" name="fieldToUpdate"> <!-- Campo oculto para el nombre del campo a actualizar -->
                <p id="fieldName">First Name</p>
                <div class="modal-options">
                    <input type="text" id="actuallyInformation" name="currentValue" disabled>
                    <input type="text" id="updateInformation" name="newValue" placeholder="Enter new value" required>
                </div>
                <div class="modal-buttons">
                    <button type="submit" class="confirm-btn">Change</button>
                    <button type="button" id="cancelUpdate" class="cancel-btn">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Aquí es donde llamas a tu archivo JS -->
    <script src="~/js/Profile.js" asp-append-version="true"></script>
</body>
</html>